<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/simple_background" >

    <TextView
        android:id="@+id/top_chart_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="Голосование Sемь"
        android:textSize="20dp"/>

    <TableLayout
        android:id="@+id/top_chart"
        android:layout_below="@id/top_chart_title"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:weightSum="140">

        <TableRow
            android:id="@+id/top_chart_1"
            android:layout_width="match_parent"
            android:layout_weight="20"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/medal_gold"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Crazy Jump — Художник"
                android:layout_marginLeft="10dp"
                android:layout_weight="100"
                android:textSize="16dp"/>

        </TableRow>

        <TableRow
            android:id="@+id/top_chart_2"
            android:layout_width="match_parent"
            android:layout_weight="20"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/medal_silver" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Бар Дюр — Отпускаю"
                android:layout_marginLeft="10dp"
                android:layout_weight="100"
                android:textSize="16dp" />

        </TableRow>

        <TableRow
            android:id="@+id/top_chart_3"
            android:layout_width="match_parent"
            android:layout_weight="20"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/medal_bronze"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Маленький П — Шизофрения"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"/>

        </TableRow>

        <TableRow
            android:id="@+id/top_chart_4"
            android:layout_width="match_parent"
            android:layout_weight="20"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/top_chart_4"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Леонид Кузьмин — Дожить до темноты"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"/>

        </TableRow>

        <TableRow
            android:id="@+id/top_chart_5"
            android:layout_width="match_parent"
            android:layout_weight="20"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/top_chart_5"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Танцы! — Хау мач из зе фиш"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"/>

        </TableRow>

        <TableRow
            android:id="@+id/top_chart_6"
            android:layout_width="match_parent"
            android:layout_weight="20"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/top_chart_6"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="6 Океанов — Засыпай на плече"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"/>

        </TableRow>

        <TableRow
            android:id="@+id/top_chart_7"
            android:layout_width="match_parent"
            android:layout_weight="20"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/top_chart_7"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Ideя Fix — Куадриалья Баллиста"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"/>

        </TableRow>

    </TableLayout>

</RelativeLayout>